ErrorDocument 404 /404/

RewriteEngine on

# Getting rid of slashes
RewriteCond %{REQUEST_URI} ^(.*?)(?:/){2,}$
RewriteRule . $1/ [R=301,L]

# Getting rid of index.php
RewriteCond    %{THE_REQUEST} ^.*/index.php
RewriteRule    ^(.*)$ / [R=301,L]

# Getting rid of empty ?
RewriteCond    %{THE_REQUEST} ^.*/?
RewriteRule    ^(.*)$ / [R=301,L]
